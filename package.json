{
  "name": "mp3cut",
  "productName": "MP3cut",
  "version": "1.0.0",
  "description": "Audio cutting tool with waveform visualization",
  "main": "src/main/index.js",
  "build": {
    "appId": "com.mp3cut.app",
    "productName": "MP3cut",
    "mac": {
      "category": "public.app-category.music"
    }
  },
  "scripts": {
