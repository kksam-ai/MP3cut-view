{
  "name": "audio-cutter",
  "version": "1.0.0",
  "description": "Audio cutting tool with waveform visualization",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev:main": "nodemon --watch src/main --exec electron .",
    "dev:renderer": "electron . --dev",
    "dev:all": "concurrently \"npm run dev:main\" \"npm run dev:renderer\""
  },
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "electron": "^25.0.0",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "node-web-audio-api": "^0.10.0"
  },
  "devDependencies": {
    "chokidar": "^4.0.3",
    "concurrently": "^8.2.2",
    "electron-reloader": "^1.2.3",
    "nodemon": "^3.1.9"
  }
}
