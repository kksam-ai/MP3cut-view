  "dependencies": {
    "@electron/remote": "^2.0.10",
    "electron": "^25.0.0",
    "ffmpeg-static": "^5.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "node-web-audio-api": "^0.10.0"
  },
  "devDependencies": {
    "chokidar": "^4.0.3",
    "nodemon": "^3.0.2",
    "electron-reloader": "^1.2.3"
  }
